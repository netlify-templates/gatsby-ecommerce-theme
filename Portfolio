// Helper functions
const qs = (s, el=document) => el.querySelector(s);
const qsa = (s, el=document) => [...el.querySelectorAll(s)];
const elc = (tag, cls) => { const e = document.createElement(tag); if(cls) e.className = cls; return e; };

function badge(cls, text){
  const b = document.createElement('span');
  b.className = 'badge ' + cls;
  b.textContent = text; return b;
}

function setTab(tab){
  qsa('.tab-btn').forEach(b => b.classList.toggle('active', b.dataset.tab === tab));
  
  // Hide all sections
  ['bugs-section','testcases-section','rtm-section','testplan-section','strategy-section','summary-section'].forEach(id => {
    const el = qs('#'+id);
    if(el) el.style.display = 'none';
  });
  
  // Show active section
  const activeSection = qs('#'+tab+'-section');
  if(activeSection) {
    activeSection.style.display = 'block';
    if(activeSection.classList.contains('doc-section')) activeSection.classList.add('active');
  }
  
  if(tab === 'bugs' || tab === 'testcases') updateStats();
}

function renderBugs(list){
  const grid = qs('#bugsGrid');
  grid.innerHTML = '';
  list.forEach(item=>{
    const card = elc('article','card');
    card.tabIndex = 0;
    card.setAttribute('role','button');
    card.setAttribute('aria-expanded','false');

    const head = elc('div','header');
    const left = elc('div');
    const id = elc('div','id'); id.textContent = item.id;
    const title = elc('div','title'); title.textContent = item.title;
    left.append(id,title);

    const meta = elc('div','meta');
    meta.append(
      badge('category-' + item.category.replace('/','-').toLowerCase(), item.category),
      badge('severity-' + item.severity.toLowerCase(), 'Severity: ' + item.severity),
      badge('priority-' + item.priority.toLowerCase(), 'Priority: ' + item.priority)
    );

    const details = elc('div','details');
    details.innerHTML = `
      <div class="section"><h4>Summary</h4><p>${item.summary}</p></div>
      <div class="section"><h4>Steps to Reproduce</h4><ol>${item.steps.map(s=>`<li>${s}</li>`).join('')}</ol></div>
      <div class="section"><h4>Expected</h4><p>${item.expected}</p></div>
      <div class="section"><h4>Actual</h4><p>${item.actual}</p></div>
      <div class="section"><h4>Environment</h4>
        <div class="env">
          <div><strong>Device</strong><span>${item.environment.device}</span></div>
          <div><strong>OS</strong><span>${item.environment.os}</span></div>
          <div><strong>Browser</strong><span>${item.environment.browser}</span></div>
        </div>
      </div>`;

    head.append(left);
    card.append(head, meta, details);

    const toggle = ()=>{
      const expanded = card.getAttribute('aria-expanded') === 'true';
      card.setAttribute('aria-expanded', String(!expanded));
      details.style.display = expanded ? 'none' : 'block';
    };
    card.addEventListener('click', e=>{ if(e.target.closest('.details')) return; toggle(); });
    card.addEventListener('keydown', e=>{ if(e.key==='Enter'||e.key===' '){ e.preventDefault(); toggle(); } });

    grid.append(card);
  });
  qs('#bug-empty').style.display = list.length ? 'none' : 'block';
  qs('#bugs-pill').textContent = String(list.length);
}

function renderTCs(list){
  const grid = qs('#tcGrid');
  grid.innerHTML = '';
  list.forEach(tc=>{
    const card = elc('article','card');
    card.tabIndex = 0; card.setAttribute('role','button'); card.setAttribute('aria-expanded','false');

    const head = elc('div','header');
    const left = elc('div');
    const id = elc('div','id'); id.textContent = tc.id;
    const title = elc('div','title'); title.textContent = tc.title;
    left.append(id,title);

    const meta = elc('div','meta');
    meta.append(
      badge('category-' + (tc.category||'functional'), (tc.category||'functional').toUpperCase()),
      badge('priority-' + (tc.priority||'Medium').toLowerCase(), 'Priority: ' + (tc.priority||'Medium')),
      badge(tc.outcome==='negative' ? 'outcome-negative' : 'outcome-positive', (tc.outcome||'positive').toUpperCase())
    );

    const details = elc('div','details');
    details.innerHTML = `
      ${tc.type?`<div class="section"><h4>Type</h4><p>${tc.type}</p></div>`:''}
      ${tc.preconditions?`<div class="section"><h4>Preconditions</h4><p>${tc.preconditions}</p></div>`:''}
      ${tc.steps?`<div class="section"><h4>Steps</h4><ol>${tc.steps.map(s=>`<li>${s}</li>`).join('')}</ol></div>`:''}
      ${tc.expected?`<div class="section"><h4>Expected</h4><p>${tc.expected}</p></div>`:''}
      ${tc.postconditions?`<div class="section"><h4>Postconditions</h4><p>${tc.postconditions}</p></div>`:''}
      ${tc.testData?`<div class="section"><h4>Test Data</h4><p>${tc.testData}</p></div>`:''}
      ${tc.tags?`<div class="section"><h4>Tags</h4><p>${tc.tags.join(', ')}</p></div>`:''}
    `;

    head.append(left);
    card.append(head, meta, details);

    const toggle = ()=>{
      const expanded = card.getAttribute('aria-expanded') === 'true';
      card.setAttribute('aria-expanded', String(!expanded));
      details.style.display = expanded ? 'none' : 'block';
    };
    card.addEventListener('click', e=>{ if(e.target.closest('.details')) return; toggle(); });
    card.addEventListener('keydown', e=>{ if(e.key==='Enter'||e.key===' '){ e.preventDefault(); toggle(); } });

    grid.append(card);
  });
  qs('#tc-empty').style.display = list.length ? 'none' : 'block';
  qs('#tcs-pill').textContent = String(list.length);
}

function updateStats(){
  const bugsSection = qs('#bugs-section');
  const tcsSection = qs('#testcases-section');
  
  if(bugsSection && bugsSection.style.display !== 'none'){
    qs('#bug-stats').innerHTML = `<div class="stat-card"><div class="stat-number">${qs('#bugs-pill').textContent}</div><div class="stat-label">Bugs in view</div></div>`;
  }
  
  if(tcsSection && tcsSection.style.display !== 'none'){
    qs('#tc-stats').innerHTML = `<div class="stat-card"><div class="stat-number">${qs('#tcs-pill').textContent}</div><div class="stat-label">Test cases in view</div></div>`;
  }
}

// Filters
let bugFilterCat = 'all';
let tcFilterCat = 'all';
let tcOutcome = 'all';
let bugSearch = '';
let tcSearch = '';

function applyBugFilters(){
  const list = bugs.filter(b => (
    (bugFilterCat==='all' || b.category===bugFilterCat) &&
    (b.id+ b.title + b.category).toLowerCase().includes(bugSearch)
  ));
  renderBugs(list);
}

function applyTCFilters(){
  const list = testCases.filter(tc => {
    const catOK = (tcFilterCat==='all' || (tc.category||'').toLowerCase()===tcFilterCat);
    const outOK = (tcOutcome==='all' || (tc.outcome||'positive')===tcOutcome);
    const s = (tc.id + tc.title + (tc.category||'')).toLowerCase();
    return catOK && outOK && s.includes(tcSearch);
  });
  renderTCs(list);
}

function init(){
  setTab('testcases');

  // Bug filters
  qsa('#bugs-section .filter-btn').forEach(btn=>{
    btn.addEventListener('click',()=>{
      qsa('#bugs-section .filter-btn').forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
      bugFilterCat = btn.dataset.filter;
      applyBugFilters(); updateStats();
    });
  });
  
  const bugSearchEl = qs('#bug-search');
  if(bugSearchEl) bugSearchEl.addEventListener('input', e=>{ bugSearch = e.target.value.toLowerCase(); applyBugFilters(); updateStats(); });

  // TC filters
  qsa('#tc-cat-filters .filter-btn').forEach(btn=>{
    btn.addEventListener('click',()=>{
      qsa('#tc-cat-filters .filter-btn').forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
      tcFilterCat = btn.dataset.filter;
      applyTCFilters(); updateStats();
    });
  });
  
  qsa('#tc-outcome-filters .filter-btn').forEach(btn=>{
    btn.addEventListener('click',()=>{
      qsa('#tc-outcome-filters .filter-btn').forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
      tcOutcome = btn.dataset.outcome;
      applyTCFilters(); updateStats();
    });
  });
  
  const tcSearchEl = qs('#tc-search');
  if(tcSearchEl) tcSearchEl.addEventListener('input', e=>{ tcSearch = e.target.value.toLowerCase(); applyTCFilters(); updateStats(); });

  // Tab switching
  qsa('.tab-btn').forEach(btn=>{
    btn.addEventListener('click',()=>{ setTab(btn.dataset.tab); });
  });

  applyBugFilters();
  applyTCFilters();
  updateStats();
}

document.addEventListener('DOMContentLoaded', init);
</script>
</body>
</html>
